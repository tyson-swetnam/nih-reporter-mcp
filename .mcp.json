{
  "mcpServers": {
    "nih-reporter": {
      "type": "stdio",
      "command": "node",
      "args": [
        "src/index.js"
      ],
      "env": {
        "NIH_API_BASE_URL": "https://api.reporter.nih.gov/v2",
        "CACHE_ENABLED": "true",
        "CACHE_TTL": "3600000",
        "RATE_LIMIT_ENABLED": "true",
        "RATE_LIMIT_REQUESTS_PER_SECOND": "1"
      }
    }
  }
}