{
  "name": "nih-reporter-mcp",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP server for NIH RePORTER API - search and analyze federal research grant data",
  "main": "src/index.js",
  "bin": {
    "nih-reporter-mcp": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "NODE_ENV=development node --watch src/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:unit": "npm test -- tests/unit",
    "test:integration": "npm test -- tests/integration",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.js'"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "nih",
    "reporter",
    "grants",
    "research",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.2",
    "lru-cache": "^10.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1"
  }
}
